{
  "$id": "https://raw.githubusercontent.com/dcic/signature-commons-schema/master/core/entity.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/dcic/signature-commons-schema/master/core/meta.json"
    },
    {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Globally unique identifier referring to this entity."
        },
        "meta": {
          "$ref": "https://raw.githubusercontent.com/dcic/signature-commons-schema/master/core/meta.json",
          "description": "Arbitrary validatable metadata describing the entity"
        }
      },
      "required": [
        "id",
        "meta"
      ]
    }
  ]
}