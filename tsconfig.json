{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2017",
      "es2016",
      "es2015"
    ],
    "typeRoots": [ "./src/types", "./node_modules/@types"]
  },
  "include": [
    "./src/**/*"
  ]
}