{
  "$id": "https://raw.githubusercontent.com/dcic/signature-commons-schema/master/meta/signature/draft-1.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/dcic/signature-commons-schema/master/core/meta.json"
    },
    {
      "type": "object",
      "properties": {
        "Assay": {
          "type": "string",
          "description": "The assay (TODO: validate against official list)"
        },
        "Gene": {
          "type": "string",
          "description": "The gene (TODO: validate against official list)"
        },
        "Cell Line": {
          "type": "object",
          "properties": {
            "Accession": {
              "type": "string",
              "description": "Accession number"
            },
            "Name": {
              "type": "string",
              "description": "Official name of cell line"
            }
          },
          "required": [
            "Accession",
            "Name"
          ]
        },
        "Gene Family": {
          "type": "string",
          "description": "The family of genes (TODO: validate against official list)"
        },
        "Number of genes": {
          "type": "number",
          "description": "Number of genes in the signature"
        },
        "Organism": {
          "type": "string",
          "description": "The organism (TODO: validate against official list)"
        },
        "Original String": {
          "type": "string",
          "description": "The original string recognized during processing"
        },
        "Processing Type": {
          "type": "string",
          "description": "The processing type (TODO: validate against official list)"
        }
      },
      "required": [
        "Assay",
        "Number of genes"
      ],
      "oneOf": [
        {
          "required": [
            "Gene",
            "Gene Family"
          ]
        },
        {
          "required": [
            "Cell Line"
          ]
        }
      ]
    }
  ]
}