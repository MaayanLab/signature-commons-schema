{
  "$id": "/@dcic/signature-commons-schema/meta/signature/perturbation/small-molecule.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "type": "array",
      "description": "The small molecule used in the study",
      "items": [
        {
          "type": "object",
          "properties": {
            "Name": {
              "description": "The name of the small molecule",
              "type": "string"
            },
            "Accession": {
              "description": "The ontology accession of the small molecule",
              "type": "string"
            },
            "Concentration": {
              "description": "The concentration used for the study",
              "type": "string"
            },
            "PubChemID": {
              "description": "The pubchem ID accession of the small molecule",
              "type": "string"
            },
            "Remarks": {
              "description": "Remark about this perturbation",
              "type": "string"
            },
            "Smiles": {
              "description": "Remark about this perturbation",
              "type": "string"
            }
          },
          "required": [
            "Name"
          ]
        }
      ]
    }
  ]
}