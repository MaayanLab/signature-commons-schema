{
  "$id": "/dcic/signature-commons-schema/v5/meta/schemas/ui-schema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Metadata describing a signature commons ui schema",
  "allOf": [
    {
      "$ref": "/dcic/signature-commons-schema/v5/core/meta.json"
    },
    {
      "properties": {
        "match": {
          "description": "The partial rules to match a data instance `${variable}` can be used for variable substitution",
          "$ref": "/dcic/signature-commons-schema/v5/meta/schema/match.json"
        },
        "properties": {
          "description": "UI-defined properties for the given match",
          "type": "object",
          "patternProperties": {
            ".*": {
              "description": "Each property is followed by a the schema which defines what it represents",
              "allOf": [
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "description": "The field type",
                      "type": "string",
                      "enum": [
                        "img", "text", "text-default", "object"
                      ]
                    },
                    "visibility": {
                      "description": "The visibility of the field (0: hidden, 1: usually visible, 2: always visible)",
                      "type": "integer"
                    },
                    "condition": {
                      "type": "object",
                      "description": "A mapping of conditions to compare",
                      "$ref": "/dcic/signature-commons-schema/v5/meta/schema/match.json"
                    },
                    "columnType": {
                      "type": "string",
                      "enum": [
                        "number"
                      ]
                    },
                    "columnOptions": {
                      "type": "object",
                      "properties": {
                        "sort": {
                          "type": "boolean"
                        },
                        "sortDirection": {
                          "type": "string",
                          "enum": ["asc", "desc"]
                        }
                      }
                    }
                  }
                }
              ],
              "oneOf": [
                {
                  "type": "object",
                  "description": "Image field",
                  "properties": {
                    "type": {
                      "description": "The field type",
                      "type": "string",
                      "enum": [ "img" ]
                    },
                    "src": {
                      "description": "The image source url",
                      "type": "string"
                    },
                    "alt": {
                      "description": "The image alt description",
                      "type": "string"
                    }
                  }
                },
                {
                  "type": "object",
                  "description": "Text field",
                  "properties": {
                    "type": {
                      "description": "The field type",
                      "type": "string",
                      "enum": [ "text" ]
                    },
                    "text": {
                      "description": "The text to be shown",
                      "type": "string"
                    }
                  }
                },
                {
                  "type": "object",
                  "description": "Text field",
                  "properties": {
                    "type": {
                      "description": "The field type",
                      "type": "string",
                      "enum": [ "text-default" ]
                    },
                    "text": {
                      "description": "The text to be shown",
                      "type": "string"
                    }
                  }
                },
                {
                  "type": "object",
                  "description": "Object field",
                  "properties": {
                    "type": {
                      "description": "The field type",
                      "type": "string",
                      "enum": [ "object" ]
                    },
                    "text": {
                      "description": "The text to be shown",
                      "type": "string"
                    },
                    "subfield": {
                      "description": "The text to be shown in the subfield",
                      "type": "string"
                    }
                  }
                }
              ]
            }
          }
        }
      },
      "required": [
        "match"
      ],
      "type": "object"
    }
  ]
}