{
  "$id": "/@dcic/signature-commons-schema/v4/meta/library/sigcom.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "/@dcic/signature-commons-schema/v4/core/meta.json"
    },
    {
      "properties": {
        "Description": {
          "description": "A short description of the resource",
          "type": "string"
        },
        "Icon": {
          "description": "Path to the favicon",
          "type": "string"
        },
        "PMID": {
          "description": "The PubMed ID for the resource",
          "pattern": "^([0-9]+(; *)?)+$",
          "type": "string"
        },
        "Resource_Name": {
          "description": "Name of the resource",
          "type": "string"
        },
        "Signature_Count": {
          "description": "Number of signatures in the resource",
          "pattern": "^([0-9]+(; *)?)+$",
          "type": "string"
        },
        "URL": {
          "description": "Link to the resource",
          "format": "uri",
          "type": "string"
        }
      },
      "required": [
        "Resource_Name",
        "Description",
        "PMID"
      ],
      "type": "object"
    }
  ]
}